{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["resources/js/*"]
      },
      "allowJs": true,
      "checkJs": true,
      "jsx": "preserve"
    },
    "include": [
      "resources/js/**/*.js",
      "resources/js/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  